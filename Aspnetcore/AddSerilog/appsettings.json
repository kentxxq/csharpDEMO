{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                // 时间、时区 | 级别 | SourceContext | 线程名称 | 线程id | 信息/异常
                // 2023-06-15 21:39:48.254 +08:00|INF|Serilog.AspNetCore.RequestLoggingMiddleware|.NET ThreadPool Worker|11|HTTP GET /Counter/Count responded 200 in 0.2160 ms
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}|{Level:u3}|{SourceContext}|{ThreadName}|{ThreadId}|{Message:lj}{Exception}{NewLine}",
                "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
              }
            },
            {
              "Name": "File",
              "Args": {
                "path": "demo-.log",
                "rollingInterval": "Day",
                "formatter": "AddSerilog.MyJsonFormatter::Formatter, AddSerilog",
                "retainedFileCountLimit": 1,
                "renderMessage": true
              }
            }
          ]
        }
      }
      //      {
      //        "Name": "Console",
      //        "Args": {
      //          // 时间、时区 | 级别 | SourceContext | 线程名称 | 线程id | 信息/异常
      //          // 2023-06-15 21:39:48.254 +08:00|INF|Serilog.AspNetCore.RequestLoggingMiddleware|.NET ThreadPool Worker|11|HTTP GET /Counter/Count responded 200 in 0.2160 ms
      //          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}|{Level:u3}|{SourceContext}|{ThreadName}|{ThreadId}|{Message:lj}{Exception}{NewLine}",
      //          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
      //        }
      //      },
      //      {
      //        "Name": "File",
      //        "Args": {
      //          "path": "demo-.log",
      //          "rollingInterval": "Day",
      //          "formatter": "AddSerilog.MyJsonFormatter::Formatter, AddSerilog",
      //          "retainedFileCountLimit": 1,
      //          "renderMessage": true
      //        }
      //      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithThreadId",
      "WithThreadName"
    ]
  }
}
